<div class="clearfix p15">
  <h3>Users List</h3>
  <div class="large-12 medium-12 small-12 column p0">
    <div class="large-6 medium-6 small-12 column ptm"><strong>Email</strong></div>
    <div class="large-3 medium-3 small-12 column ptm"><strong>Name</strong></div>
    <div class="large-3 medium-3 small-12 column ptm"><strong>Role</strong></div>
  </div>
  <% @users.each do |user| %>
    <div class="large-12 medium-12 small-12 column pl0 pr0">
      <div class="large-6 medium-6 small-12 column pt1 mt0 mb0 pbm"><%= user.email %></div>
      <div class="large-3 medium-3 small-12 column pt1 mt0 mb0 pbm"><%= user.name %></div>
      <% if current_user && current_user.role.user_control == 1 %>
        <div class="large-3 medium-3 small-12 column ptm mt0 mb0 pbs">
          <%= select_tag 'role', options_from_collection_for_select(@roles, 'id', 'name', user.role.id),
                          class: 'role-select mb0 mt0', id: "role-#{user.id}" %>
        </div>
      <% else %>
        <div class="large-3 medium-3 small-12 column pt1 mt0 mb0 pbm">
          <p class="mb0"><%= user.role.name %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<%= link_to 'Add Role', new_role_path, class: 'button radius mt1 ml1' %>