<div class="form-container radius-box small-10 small-centered medium-8 large-6 columns">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: :email, class: :radius %>
    </div>

    <div class="actions">
      <%= f.submit 'Send me reset password instructions', class: 'button radius' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>