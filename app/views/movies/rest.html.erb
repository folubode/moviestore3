<div class="clearfix p15">
  <h3>Movies List</h3>
  <div class="large-8 medium-10 small-12 column small-centered">
    <div class="large-6 medium-5 small-12 column mbm mt0"><strong>Email</strong></div>
    <div class="large-3 medium-3 small-12 column mbm mt0"><strong>Year</strong></div>
    <div class="large-3 medium-4 small-12 column mbm mt0"><strong>Count of Copies</strong></div>
    <% @movies.each do |movie| %>
      <div class="large-6 medium-5 small-12 column mbm mtm"><%= movie.title %></div>
      <div class="large-3 medium-3 small-12 column mbm mtm"><%= movie.release_year %></div>
      <% if current_user.role.updating == 1 %>
        <div class="large-3 medium-4 small-12 column mbs mt0">
          <%= number_field :movie, :count_of_copies, class: 'mbs mt0 radius movie-field',
                           value: movie.count_of_copies, id: "movie_count_of_copies-#{movie.id}" %>
        </div>
      <% else %>
        <div class="large-3 medium-4 small-12 column mbm mtm"><%= movie.count_of_copies %></div>
      <% end %>
    <% end %>
  </div>
</div>